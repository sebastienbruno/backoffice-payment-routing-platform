{
  "name": "message-ingest-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chmod +x mvnw && sh ./mvnw clean package -DskipTests",
        "cwd": "apps/message-ingest-service"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chmod +x mvnw && sh ./mvnw spring-boot:run",
        "cwd": "apps/message-ingest-service"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/message-ingest-service/Dockerfile . -t message-ingest-service"
    }
  }
}
